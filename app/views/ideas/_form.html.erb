
<% if @idea.errors.present? %>
  <p>
    <%= @idea.errors.full_messages.join(', ')%>
  </p>
<% end %>

<%= form_with model: @idea, :class=>"form-group", local:true do |f| %>
  <div class="form-group mb-4">
    <label class="d-flex flex-start" >Title</label>
    <%= f.text_field(:title, class: 'form-control')%>
    
  </div>
  <div class="form-group mb-4">
    <label class="d-flex flex-start" >Body</label>
    <%= f.text_area(:body, class: 'form-control', cols: 50, rows: 5)%>
  </div>

<%=f.submit  "Submit", class: 'btn btn-outline-primary  d-flex flex-start' %> 

<% end %>