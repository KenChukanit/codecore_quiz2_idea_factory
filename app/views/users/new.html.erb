<h1>Sign Up Form</h1>

<% if @user.errors.present? %>
  <p>
    <%= @user.errors.full_messages.join(', ')%>
  </p>
<% end %>

<%= form_with model: @user, :class=>"form-group", local:true do |f| %>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Name</label>
        <%= f.text_field(:name, class: 'form-control')%> 
    </div>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Email</label>
        <%= f.email_field(:email, class: 'form-control')%>
    </div>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Password</label>
        <%= f.password_field(:password, class: 'form-control')%>
    </div>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Password Confirmation</label>
        <%= f.password_field(:password_confirmation, class: 'form-control')%>
    </div>
<%=f.submit  "Sign Up", class: 'btn btn-outline-primary  d-flex flex-start' %> 

<% end %>